<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".AddContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textviewabc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/darkerBlue"
            android:gravity="center"
            android:text="New Contact"
            android:textColor="@color/yellowishWhite"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0" />

            <ImageView
                android:id="@+id/detailContactPhoto"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/humaniconcircle" />

            <ImageButton
                android:id="@+id/detailBtnTakePhoto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/camericon" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="60dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name :  "
                android:textColor="@color/darkerBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detailContName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="@color/okBlue" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="58dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mobile : "
                android:textColor="@color/darkerBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detailContNo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/edit_round"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:textColor="@color/okBlue" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="45dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Address : "
                android:textColor="@color/darkerBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detailContAddr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/edit_round"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="@color/okBlue" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnDetailCancel"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/closeicon" />

            <Space
                android:layout_width="100dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnContactUpdate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/lightBlue"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/tickicon2" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>